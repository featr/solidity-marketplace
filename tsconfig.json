{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@content/*": ["content/*"],
      "@utils/*": ["utils/*"]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "./scripts",
    "./test",
    "./typechain",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"],
  "files": ["./hardhat.config.ts"]
}
